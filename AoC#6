with open('aoc6t.txt','r') as f:
    pd = f.read() #readlines() will give it as a list, but i only need a string rn.
pd=pd.split('\n')
pd = [el.split(')') for el in pd]
pd = [tuple(el) for el in pd]
orbiter='COM'
c=0
loop=0
# print(pd)
traceback=['COM']
print(orbiter,pd,len(pd))
t=0
order=[]
while pd: #while pd not empty
    print('top')
    c+=1
    if c==10: #auto break
        print('finalfinal breaking')
        break #autobr  a
    b = True
    for item in pd:
        if item[0] == orbiter:
            b = False
            orbiter=item[1]
            pd.remove(item)
            order.append(item)
            traceback.append(item[1])
            print('mainbody',pd,orbiter,traceback)
            c=0
            t=0
            break# continue
    if b == True:
        orbiter = traceback[t]
        t+=1
        print(b,orbiter,traceback)


print('loop over',pd,traceback)
print()
print(len(order))
